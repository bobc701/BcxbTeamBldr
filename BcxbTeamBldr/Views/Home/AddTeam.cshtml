@model BcxbTeamBldr.DataLayer.CUserTeam

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddTeam</title>
</head>
<body>
    <h2>Add new team for @Model.UserName.Split('@')[0]</h2>
    @using (Html.BeginForm()) {
<div>

   @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@

   New team name: @Html.TextBoxFor(t => t.TeamName)
   @*@Html.ValidationMessageFor(model => model.TeamName, "", new { @class = "text-danger" })*@
   <p />Team uses DH at home: @Html.CheckBoxFor(t => t.UsesDh)

   <p class="ErrorMsg" />@ViewBag.Msg
   <p />@Html.HiddenFor(t => t.UserName)

</div>
        <input type="submit" value="Add the new team" class="btn button1" style="width:175px;"/>
        @*<input type="button" value="Cancel" class="btn button1" />*@
        @Html.ActionLink("Close", "TeamList", new { user = Model.UserName }, new { @class = "btn button1" })
    }
</body>
</html>
